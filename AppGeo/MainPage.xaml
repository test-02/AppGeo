<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGeo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Inicio de la Geolocalización y Mapas" FontSize="Title" Padding="30,10,30,10"/>

        <Label Text="Ejemplo de Geolocalización" FontSize="16" Padding="30,0,30,0"/>

        <Button x:Name="MiUbicacion" Text="Un punto" FontSize="Body" Clicked="MiUbicacion_Clicked" Margin="10,0,10,0"/>

        <Button x:Name="DosUbicaciones" Text="Dos Puntos" FontSize="Body" Clicked="DosUbicaciones_Clicked" Margin="10,30,10,0"/>

        <Button x:Name="Navegacion" Text="Navegacion" FontSize="Body" Clicked="Navegacion_Clicked" Margin="10,30,10,0"/>
    </StackLayout>

</ContentPage>
